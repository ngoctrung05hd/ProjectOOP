<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="556.0" prefWidth="733.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AtDe.UserInterface.CardGameController">
   <children>
      <!-- Bottom Buttons -->
      <HBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <children>
              <Button fx:id="endTurnButton" text="Kết thúc lượt" />
              <Button fx:id="playButton" text="Đánh bài" />
         </children>
      </HBox>

      <!-- Player Hand -->
      <HBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
         <children>
            <Button fx:id="prevButton" onAction="#shiftHandLeft" prefHeight="25.0" prefWidth="32.0" text="&lt;" />
            <HBox fx:id="handBox" alignment="CENTER" prefHeight="126.0" prefWidth="423.0" styleClass="hand-box" stylesheets="@style.css" />
            <Button fx:id="nextButton" onAction="#shiftHandRight" prefHeight="25.0" prefWidth="32.0" text="&gt;" />
         </children>
      </HBox>

      <!-- Left Box for Cards to Defend -->
      <HBox prefHeight="126.0" alignment="CENTER" spacing="10.0" AnchorPane.leftAnchor="25.0" AnchorPane.topAnchor="200.0">
         <children>
            <Button fx:id="prevNeedToDefendButton" onAction="#shiftNeedToDefendCardsLeft" prefHeight="25.0" prefWidth="31.0" text="&lt;" />
            <HBox fx:id="needToDefendCardsBox" prefHeight="25.0" prefWidth="100.0" />
            <Button onAction="#shiftNeedToDefendCardsRight" prefHeight="25.0" prefWidth="31.0" text="&gt;" />
         </children>
      </HBox>

      <!-- Right Box for Used Cards -->
      <HBox prefHeight="126.0" alignment="CENTER" spacing="10.0" AnchorPane.rightAnchor="175.0" AnchorPane.topAnchor="200.0">
         <children>
            <Button fx:id="prevUsedButton" onAction="#shiftNeedToDefendCardsLeft" prefHeight="25.0" prefWidth="31.0" text="&lt;" />
            <HBox fx:id="usedCardsBox" prefHeight="25.0" prefWidth="100.0" />
            <Button fx:id="nextUsedButton" onAction="#shiftNeedToDefendCardsRight" prefHeight="25.0" prefWidth="31.0" text="&gt;" />
         </children>
      </HBox>

      <HBox fx:id="speacialCardBox" alignment="CENTER" layoutX="641.0" layoutY="190.0" prefHeight="126.0" prefWidth="55.0" spacing="10.0" stylesheets="@style.css" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="200.0" />
      <Label fx:id="remainingCardLabel" layoutX="683.0" layoutY="182.0" text="52" textFill="#fd0f0f" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="190.0" />
   </children>
</AnchorPane>
